<% if next_page[:page] || previous_page[:page] %>
<ul>
  <% if next_page[:page] %>
  <% link_to next_page[:page], :rel => 'next' do %>
  <li><%=h next_page[:label] %></li>
  <% end %>
  <% end %>
  <% if previous_page[:page] %>
  <% link_to previous_page[:page], :rel => 'prev' do %>
  <li><%=h previous_page[:label] %></li>
  <% end %>
  <% end %>
</ul>
<% end %>
